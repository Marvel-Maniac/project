<h1>Hello
    <b>
      <%= user.username %>
    </b>
  </h1>
  <div class="col-sm-6 centered-form">
    <form action="/editPost/<%= myPost._id %>" method="post" enctype="multipart/form-data">
      <h2>Edit Post</h2>
      <div class="form-group">
        <label for="title">Edit Title
        </label>
        <input type="text" name="title" class="form-control" placeholder="CURRENT TITLE: <%= myPost.title %>">
        <input type="hidden" name="currentTitle" class="form-control" value="<%= myPost.title %>">
        <input type="hidden" name="idUser" class="form-control" value="<%= user._id %>">
      </div>
      <div class="form-group">
        <label for="content">Edit Content
        </label>
        <textarea type="text" name="content" class="form-control" placeholder="CURRENT CONTENT: <%= myPost.content %>" rows="4" cols="50"></textarea>
        <input type="hidden" name="currentContent" class="form-control" value="<%= myPost.content %>">
      </div>
      <div class="form-group">
        <label for="imgUrl">Current Post Image</label>
        <img src="<%= myPost.imgUrl %>" alt="">
        <hr>
        <label for="imgUrl">New Post Image</label>
        <input type="file" name="image" class="form-control" placeholder="New image here">
        <input type="hidden" name="oldImage" class="form-control" value="<%= myPost.imgUrl %>">
      </div>
      <button type="submit">Save changes in Post</button>
    </form>
  </div>