<div class="containerPrivate">
  <div class="containerPrivatePadding">
    <div class="row">
      <div class="col-sm-12">
        <p class="userNamePrivate">Hello
          <%= user.username %> -
            <a href="/editProfile?id=<%= user._id %>" class="editProfile">Edit Profile</a>
        </p>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <p class="photoPrivate">Your profile photo:</p>
        <img src="/uploads/<%= user.imgUrl %>" alt="">
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12 certificationProfile">
        <p>You have the following certifications:</p>
      </div>
    </div>
    <ul>
      <div class="row">
        <% userCert.forEach (c => { %>
          <div class="col-md-4">
            <li>
              <%= c.category %>
            </li>
            <img src="<%= c.imgUrl %>" alt="" style="width: 100%; height: auto; max-width: 200px;">
          </div>
          <% }) %>
      </div>
    </ul>
    <hr>


    <div class="row">
      <div class="col-sm-12">
        <p>You are MISSING the certifications below.</p>
        <p>Try to get them!!!!</p>
      </div>
    </div>
    <div class="row">
    <ul>
      <% allCert.forEach (c => { %>
        <div class="col-md-3">
          <li>
            <%= c.category %>
          </li>
          <img src="<%= c.imgUrl %>" alt="" style="width: 100%">
          <a href="/quiz/<%= c.category %>"><p class="getCertificate">Get <%= c.category %> Certificate</p></a>
        </div>
        <% }) %>
    </ul>
    </div>
    <p>
        <a href="/newPost?id=<%= user._id %>" style="color: black!important">Add New Post</a>
      </p>
    <% posts.forEach (function (p) { %>
      <div class="row" style="margin-top:20px;">
        <hr/ class="hrSeparator">
          <div class="col-sm-4">
            <img src="/uploads/<%= p.imgUrl %>" alt="" class="imgEvents" />
          </div>
          <div class="col-sm-8">
            <p class="eventTitle">
              <%= p.title %>
            </p>
            <p class="descriptionEvent">
              <%= p.content %>
            </p>
            <p>
              <a href="/editPost/<%= p._id %>" style="color:black!important">Edit this post</a>
            </p>
          </div>
      </div>
      <% }) %>
        <hr>
        </br>
        <a href="/">Go Home</a>
  </div>
</div>